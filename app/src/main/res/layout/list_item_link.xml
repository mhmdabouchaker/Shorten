<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/originalLinkTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:maxLines="1"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            tools:text="https://www.spiegel.de/sie"
            android:layout_marginTop="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="23dp"
            android:background="@null"
            android:layout_marginEnd="26dp"
            app:layout_constraintStart_toEndOf="@+id/originalLinkTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/originalLinkTv"
            tools:ignore="ContentDescription" />
        <View
            android:id="@+id/view_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/originalLinkTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/shortLinkTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_cyan"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_separator"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="https://rel.ink/k4|Kyk"
            android:layout_marginTop="12dp"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/copyBtn"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:backgroundTint="@color/color_cyan"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:stateListAnimator="@null"
            android:text="@string/btn_copy"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="4dp"
            android:textAllCaps="true"
            android:layout_margin="23dp"
            app:rippleColor="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shortLinkTv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>